        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_lock_idle_low_battery"
            android:onClick="onClick"
            android:id="@+id/ibMensaje"/>
    </LinearLayout>

</LinearLayout>